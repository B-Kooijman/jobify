{
  "sourceRoot": "packages/nextjs",
  "projectType": "application",
  "targets": {
    "bootstrap": {
      "executor": "@nrwl/workspace:run-commands",
      "options": {
        "command": "npx ts-node --project tsconfig.scripts.json scripts/bootstrap.ts",
        "cwd": "packages/nextjs"
      }
    },
    "build": {
      "executor": "@nrwl/next:build",
      "outputs": ["{options.outputPath}"],
      "defaultConfiguration": "development",
      "dependsOn": ["bootstrap"],
      "options": {
        "root": "packages/nextjs",
        "outputPath": "packages/nextjs/.next",
        "nextConfig": "packages/nextjs/next.config.js"
      },
      "configurations": {
        "development": {},
        "production": {}
      }
    },
    "watch": {
      "executor": "@nrwl/workspace:run-commands",
      "options": {
        "command": "npx ts-node --project tsconfig.scripts.json scripts/generate-component-factory.ts --watch",
        "cwd": "packages/nextjs"
      }
    },
    "start": {
      "executor": "@nrwl/workspace:run-commands",
      "defaultConfiguration": "connected",
      "dependsOn": ["build"],
      "options": {
        "commands": ["nx watch", "nx serve"],
        "cwd": "packages/nextjs"
      },
      "configurations": {
        "connected": {
          "options": {
            "commands": ["nx watch", "nx serve"],
            "cwd": "packages/nextjs"
          }
        },
        "production": {
          "options": {
            "command": "next start",
            "cwd": "packages/nextjs"
          }
        }
      }
    },
    "graphql": {
      "executor": "@nrwl/workspace:run-commands",
      "defaultConfiguration": "update",
      "options": {
        "command": "ts-node --project tsconfig.scripts.json ./scripts/fetch-graphql-introspection-data.ts",
        "cwd": "packages/nextjs"
      },
      "configurations": {
        "update": {
          "options": {
            "command": "ts-node --project tsconfig.scripts.json ./scripts/fetch-graphql-introspection-data.ts",
            "cwd": "packages/nextjs"
          }
        }
      }
    },
    "serve": {
      "executor": "@nrwl/next:server",
      "defaultConfiguration": "development",
      "options": {
        "buildTarget": "nextjs:build",
        "dev": true,
        "cwd": "packages/nextjs"
      },
      "configurations": {
        "development": {
          "buildTarget": "nextjs:build:development",
          "dev": true,
          "hostname": "localhost",
          "port": 3000
        },
        "production": {
          "buildTarget": "nextjs:build:production",
          "dev": false
        }
      }
    },
    "scaffold": {
      "executor": "@nrwl/workspace:run-commands",
      "options": {
        "command": "npx ts-node --project tsconfig.scripts.json scripts/scaffold-component.ts {args.name}",
        "cwd": "packages/nextjs"
      }
    },
    "export": {
      "executor": "@nrwl/next:export",
      "options": {
        "buildTarget": "nextjs:build:production"
      }
    },
    "test": {
      "executor": "@nrwl/jest:jest",
      "outputs": ["coverage/packages/nextjs"],
      "options": {
        "jestConfig": "packages/nextjs/jest.config.ts",
        "passWithNoTests": true
      }
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": [
          "packages/nextjs/src/**/*.{ts,tsx,js,jsx}",
          "packages/nextjs/scripts/**/*.ts"
        ]
      }
    }
  },
  "tags": []
}

